# General Service Info
VERSION=1.0.0
MODE=debug
SERVICE_NAME=postal
HTTP_PORT=8081

# JWT Configuration
JWT_SECRET=your-secret-key-change-in-production

# APM Configuration (optional - leave empty if not using)
APM_SERVICE_NAME=
APM_SERVER_URL=
APM_SECRET_TOKEN=
APM_ENVIRONMENT=development

# RabbitMQ Configuration
RABBITMQ_URL=amqp://admin:admin@localhost:5672
RMQ_RECONNECT_DELAY=5
RMQ_RETRY_INTERVAL=600
RMQ_QUEUE_PREFIX=postal-dev

# Redis Configuration
READ_REDIS_URL=redis://localhost:6379
WRITE_REDIS_URL=redis://localhost:6379
ENABLE_REDIS_TLS_MODE=false

# Database Configuration
POSTAL_DB_DSN=postgresql://postgres:root@localhost:5432/cortex_db?sslmode=disable
POSTAL_DB_DRIVER=postgres

# Other Configurations
MAX_CSV_UPLOAD_SIZE_MB=20