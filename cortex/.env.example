# General Service Info
VERSION=1.0.0
MODE=debug
SERVICE_NAME=cortex
HTTP_PORT=8080
MIGRATION_SOURCE=migrations

# JWT Configuration
JWT_SECRET=your-secret-key-change-in-production

# APM Configuration (optional - leave empty if not using)
APM_SERVICE_NAME=
APM_SERVER_URL=
APM_SECRET_TOKEN=
APM_ENVIRONMENT=development

# RabbitMQ Configuration
RABBITMQ_URL=amqp://admin:admin@localhost:5672
RMQ_RECONNECT_DELAY=5
RMQ_RETRY_INTERVAL=600
RMQ_QUEUE_PREFIX=cortex-dev

# Redis Configuration
READ_REDIS_URL=redis://localhost:6379
WRITE_REDIS_URL=redis://localhost:6379
ENABLE_REDIS_TLS_MODE=false

# Database Configuration
BGCE_DB_DSN=postgres://postgres:postgres@localhost:5432/bgce?sslmode=disable
BGCE_DB_DRIVER=postgres